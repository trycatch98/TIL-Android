<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.trycatch.til.ui.main.MainViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/search_top_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.063"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/search_start_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.761"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="@id/search_top_guideline"
                app:layout_constraintStart_toStartOf="@id/search_start_guideline"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/menu_top_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.068"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/menu_start_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                app:layout_constraintTop_toTopOf="@id/menu_top_guideline"
                app:layout_constraintStart_toStartOf="@id/menu_start_guideline"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/title_top_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.084"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/title_bottom_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.205"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/title_start_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.044"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="오늘 배운 내용을\n작성해주세요!"
                android:textAppearance="?textAppearanceHeadline1"
                app:layout_constraintTop_toTopOf="@id/title_top_guideline"
                app:layout_constraintBottom_toBottomOf="@id/title_bottom_guideline"
                app:layout_constraintStart_toStartOf="@id/title_start_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/post_top_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.246"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="@id/post_top_guideline"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:fabCustomSize="48dp"
            app:srcCompat="@drawable/ic_write"
            android:onClick="@{() -> vm.write()}"/>

        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>