<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TIL" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/summer_sky</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/havelock_blue</item>
        <item name="colorSecondaryVariant">@color/midnight_express</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/nero</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.TIL.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TIL.Headline2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TIL.Caption</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TIL.Body1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_main_bottom_sheet</item>
    </style>
</resources>